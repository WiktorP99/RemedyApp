<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".CarScanActivity">

    <Button
        android:id="@+id/carScan_backButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/mitr_medium"
        android:gravity="center_vertical"
        android:text="@string/back_button"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/windshield_washer_fluid_btn"
        app:layout_constraintStart_toStartOf="@+id/windshield_washer_fluid_btn"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/Cooling_fluid_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/mitr_medium"
        android:gravity="center_vertical"
        android:text="@string/Cooling_fluid_btn"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/Oil_level_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/mitr_medium"
        android:gravity="center_vertical"
        android:text="@string/Oil_level_btn"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/Cooling_fluid_btn"
        app:layout_constraintStart_toStartOf="@+id/Cooling_fluid_btn"
        app:layout_constraintTop_toBottomOf="@+id/Cooling_fluid_btn"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/Oil_refill_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/mitr_medium"
        android:gravity="center_vertical"
        android:text="@string/Oil_refill_btn"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/Oil_level_btn"
        app:layout_constraintStart_toStartOf="@+id/Oil_level_btn"
        app:layout_constraintTop_toBottomOf="@+id/Oil_level_btn"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/Brake_fluid_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/mitr_medium"
        android:gravity="center_vertical"
        android:text="@string/Brake_fluid"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/Oil_refill_btn"
        app:layout_constraintStart_toStartOf="@+id/Oil_refill_btn"
        app:layout_constraintTop_toBottomOf="@+id/Oil_refill_btn"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/windshield_washer_fluid_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/mitr_medium"
        android:gravity="center_vertical"
        android:text="@string/Windshield_washer_fluid_btn"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/carScan_backButton"
        app:layout_constraintEnd_toEndOf="@+id/Brake_fluid_btn"
        app:layout_constraintStart_toStartOf="@+id/Brake_fluid_btn"
        app:layout_constraintTop_toBottomOf="@+id/Brake_fluid_btn"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="101dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/Choose_part_text"
        android:textAlignment="center"
        android:textColor="#263238"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>